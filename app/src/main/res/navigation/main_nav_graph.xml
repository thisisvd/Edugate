<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.digitalinclined.edugate.ui.fragments.mainactivity.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_notesFragment"
            app:destination="@id/notesFragment"
            app:enterAnim="@anim/slide_down_negative_anim"
            app:exitAnim="@anim/wait_animation"
            app:popEnterAnim="@anim/wait_animation"
            app:popExitAnim="@anim/slide_up_negative_anim" />
        <action
            android:id="@+id/action_homeFragment_to_syllabusFragment"
            app:destination="@id/syllabusFragment"
            app:enterAnim="@anim/slide_right_negative_anim"
            app:exitAnim="@anim/wait_animation"
            app:popEnterAnim="@anim/wait_animation"
            app:popExitAnim="@anim/slide_left_negative_anim" />
        <action
            android:id="@+id/action_homeFragment_to_yearOfPapersFragment"
            app:destination="@id/yearOfPapersFragment"
            app:enterAnim="@anim/slide_left_animation"
            app:exitAnim="@anim/wait_animation"
            app:popEnterAnim="@anim/wait_animation"
            app:popExitAnim="@anim/slide_right_animation" />
    </fragment>
    <fragment
        android:id="@+id/syllabusFragment"
        android:name="com.digitalinclined.edugate.ui.fragments.mainactivity.SyllabusFragment"
        android:label="fragment_syllabus"
        tools:layout="@layout/fragment_syllabus" />
    <fragment
        android:id="@+id/discussionFragment"
        android:name="com.digitalinclined.edugate.ui.fragments.mainactivity.DiscussionFragment"
        android:label="fragment_discussion"
        tools:layout="@layout/fragment_discussion" />
    <fragment
        android:id="@+id/myProfile"
        android:name="com.digitalinclined.edugate.ui.fragments.mainactivity.MyProfile"
        android:label="fragment_myprofile"
        tools:layout="@layout/fragment_myprofile" />
    <fragment
        android:id="@+id/subjectsFragment"
        android:name="com.digitalinclined.edugate.ui.fragments.mainactivity.SubjectsFragment"
        android:label="fragment_subjects"
        tools:layout="@layout/fragment_subjects" />
    <fragment
        android:id="@+id/notesFragment"
        android:name="com.digitalinclined.edugate.ui.fragments.mainactivity.NotesFragment"
        android:label="NotesFragment" />
    <fragment
        android:id="@+id/topicFragment"
        android:name="com.digitalinclined.edugate.ui.fragments.mainactivity.TopicFragment"
        android:label="TopicFragment" />
    <fragment
        android:id="@+id/yearOfPapersFragment"
        android:name="com.digitalinclined.edugate.ui.fragments.mainactivity.YearOfPapersFragment"
        android:label="YearOfPapersFragment" />
    <fragment
        android:id="@+id/jobUpdateFragment"
        android:name="com.digitalinclined.edugate.ui.fragments.mainactivity.JobUpdateFragment"
        android:label="fragment_job_update"
        tools:layout="@layout/fragment_job_update" />
    <fragment
        android:id="@+id/aboutUsFragment"
        android:name="com.digitalinclined.edugate.ui.fragments.mainactivity.AboutUsFragment"
        android:label="fragment_about_us"
        tools:layout="@layout/fragment_about_us" />
    <fragment
        android:id="@+id/previousYearPapersFragment"
        android:name="com.digitalinclined.edugate.ui.fragments.mainactivity.PreviousYearPapersFragment"
        android:label="fragment_previous_year_papers"
        tools:layout="@layout/fragment_previous_year_papers" />

</navigation>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.mainactivity.ClassroomFragment">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="@font/titillium_web"
        android:text="Your Classroom"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_24sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titillium_web_light"
        android:text="Keep up with your studies..."
        android:textSize="@dimen/_11sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/classroom_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FEF8E2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/white_round_curve_background"
                        android:padding="10dp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/classroom_icon1"
                        app:layout_constraintBottom_toTopOf="@+id/open1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/first_tv" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/open1"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:backgroundTint="@color/button_gradient_end_color"
                        android:text="Open"
                        android:textColor="@color/white"
                        app:cornerRadius="@dimen/_11sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/first_last_update_tv"
                        app:layout_constraintTop_toBottomOf="@+id/first_last_update_tv" />

                    <TextView
                        android:id="@+id/first_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/titillium_web_semibold"
                        android:text="Data structures and algorithms"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold"
                        android:layout_marginEnd="@dimen/_12sdp"
                        app:layout_constraintEnd_toStartOf="@+id/imageView1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/first_last_update_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/titillium_web_semibold"
                        android:text="Last updated on - Nov 8, 2022"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:textColor="#6A736B"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="@+id/first_tv"
                        app:layout_constraintTop_toBottomOf="@+id/first_tv" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/classroom_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_18sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/classroom_1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E7FAE9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/white_round_curve_background"
                        android:padding="10dp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/classroom_icon2"
                        app:layout_constraintBottom_toTopOf="@+id/open2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/second_tv" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/open2"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:backgroundTint="@color/button_gradient_end_color"
                        android:text="Open"
                        android:textColor="@color/white"
                        app:cornerRadius="@dimen/_11sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/second_last_update_tv"
                        app:layout_constraintTop_toBottomOf="@+id/second_last_update_tv" />

                    <TextView
                        android:id="@+id/second_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/titillium_web_semibold"
                        android:text="Computer Networks"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold"
                        android:layout_marginEnd="@dimen/_12sdp"
                        app:layout_constraintEnd_toStartOf="@+id/imageView2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/second_last_update_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/titillium_web_semibold"
                        android:text="Last updated on - Aug 11, 2022"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:textColor="#6A736B"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="@+id/second_tv"
                        app:layout_constraintTop_toBottomOf="@+id/second_tv" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/titillium_web_semibold"
                        android:text="PENDING WORK LEFT - 18%"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="normal"
                        android:textColor="@color/red"
                        app:layout_constraintBottom_toBottomOf="@+id/open2"
                        app:layout_constraintEnd_toEndOf="@+id/imageView2"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/classroom_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_18sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/classroom_2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EEF9FF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/white_round_curve_background"
                        android:padding="10dp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/classroom_icon4"
                        app:layout_constraintBottom_toTopOf="@+id/open3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/third_tv" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/open3"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:backgroundTint="@color/button_gradient_end_color"
                        android:text="Open"
                        android:textColor="@color/white"
                        app:cornerRadius="@dimen/_11sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/third_last_update_tv"
                        app:layout_constraintTop_toBottomOf="@+id/third_last_update_tv" />

                    <TextView
                        android:id="@+id/third_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/titillium_web_semibold"
                        android:text="Competitive Coding - C++ Bootcamp 2022"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold"
                        android:layout_marginEnd="@dimen/_12sdp"
                        app:layout_constraintEnd_toStartOf="@+id/imageView3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/third_last_update_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/titillium_web_semibold"
                        android:text="Last updated on - March 25, 2022"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:textColor="#6A736B"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="@+id/third_tv"
                        app:layout_constraintTop_toBottomOf="@+id/third_tv" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/titillium_web_semibold"
                        android:text="PENDING WORK LEFT - 58%"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="normal"
                        android:textColor="@color/red"
                        app:layout_constraintBottom_toBottomOf="@+id/open3"
                        app:layout_constraintEnd_toEndOf="@+id/imageView3"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/classroom_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/classroom_3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FDEBF9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:background="@drawable/white_round_curve_background"
                        android:padding="10dp"
                        android:src="@drawable/classroom_icon3"
                        app:layout_constraintBottom_toTopOf="@+id/open4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/four_tv" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/open4"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:backgroundTint="@color/button_gradient_end_color"
                        android:text="Open"
                        android:textColor="@color/white"
                        app:cornerRadius="@dimen/_11sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/four_last_update_tv"
                        app:layout_constraintTop_toBottomOf="@+id/four_last_update_tv" />

                    <TextView
                        android:id="@+id/four_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:fontFamily="@font/titillium_web_semibold"
                        android:text="Spring and Spring Boot - Bootcamp 2022"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/imageView4"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/four_last_update_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:textColor="#6A736B"
                        android:fontFamily="@font/titillium_web_semibold"
                        android:text="Last updated on - Dec 21, 2021"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="@+id/four_tv"
                        app:layout_constraintTop_toBottomOf="@+id/four_tv" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>